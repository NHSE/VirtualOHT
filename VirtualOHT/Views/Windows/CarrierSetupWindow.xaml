<Window x:Class="VirtualOHT.Views.Windows.CarrierSetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VirtualOHT.Views.Windows"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Wafer Loader" Height="500" Width="370" Background="#232C39">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="AUTO"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <CheckBox Content="All" HorizontalAlignment="Right" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" Margin="0 10 10 0"/>
        </Grid>
        <Grid Grid.Row="1">
            <Canvas x:Name="ImageCanvas"
            MouseLeftButtonDown="ImageCanvas_MouseLeftButtonDown"
            MouseRightButtonDown="ImageCanvas_MouseRightButtonDown">
                <Image Source="/Resources/LoadPort.png" 
               Stretch="Uniform" 
               Width="263" 
               Height="323"
               Canvas.Left="48" Canvas.Top="18" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </Canvas>
        </Grid>
        <Grid Grid.Row="2">
            <Grid>
                <ui:Button x:Name="btnset" Click="btnset_Click" Content="Set" HorizontalAlignment="Center" Height="60" Width="100"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
